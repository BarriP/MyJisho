        <activity
            android:name=".views.TranslationsView"
            android:label="@string/title_activity_translations_view"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <meta-data android:name="DATABASE" android:value="Traducciones.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.barri.myjisho.model" />
